{
  "extends": "tslint:recommended",
  "rules": {
    "array-type": [true, "array"],
    "max-line-length": {
      "options": [120]
    },
    "member-access": true,
    "member-ordering": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never"
        },
        "esSpecCompliant": true
      }
    ],
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
